{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "build/types",
    "sourceMap": false,
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@types/*": ["./src/types/*"],
      "@configs/*": ["./src/configs/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@constants/*": ["./src/constants/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@stylesheets/*": ["./src/stylesheets/*"],
      "@_types/*": ["./src/types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    ".yarn",
    "jest.setup.ts",
    "**.stories.tsx",
    "**.test.tsx",
    ".storybook",
    "build"
  ]
}
